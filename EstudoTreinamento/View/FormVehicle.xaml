<Window x:Class="EstudoTreinamento.FormVehicle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EstudoTreinamento"
        mc:Ignorable="d"
        Title="EditVehicle" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Width="800">
        <TextBox HorizontalAlignment="Left" Margin="328,115,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="328,149,0,0" TextWrapping="Wrap" Text="{Binding Brand}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="328,187,0,0" TextWrapping="Wrap" Text="{Binding Value}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="358,230,0,0" VerticalAlignment="Top" Width="60" Click="btnSave"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="358,255,0,0" VerticalAlignment="Top" Width="60"  Click="btnCancel"/>

    </Grid>
</Window>
